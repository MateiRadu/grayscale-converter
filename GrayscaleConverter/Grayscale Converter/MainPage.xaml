<Page
    x:Class="Grayscale_Converter.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                   Padding="16">
        <!-- Header -->
        <StackPanel x:Name="spHeader"
                    Background="{ThemeResource AppBarBackground}"
                    Height="48"
                    Margin="-16,-16,-16,0"
                    Orientation="Horizontal"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignTopWithPanel="True">
            <Button x:Name="PickerButton"
                    Content="Select a picture"
                    Height="48"
                    Margin="0"
                    Command="{x:Bind ViewModel.SelectPictureCommand}"/>
            <Button x:Name="ConvertButton"
                    Content="Convert"
                    Height="48"
                    Margin="0"
                    IsEnabled="{x:Bind ViewModel.ConvertButtonIsEnabled, Mode=OneWay}"
                    Visibility="{x:Bind ViewModel.ConvertButtonVisibility, Mode=OneWay}"
                    Command="{x:Bind ViewModel.ConvertPictureCommand}"/>
            <Button x:Name="SaveButton"
                    Content="Save result"
                    Height="48"
                    Margin="0"
                    IsEnabled="True"
                    Visibility="{x:Bind ViewModel.SaveButtonVisibility, Mode=OneWay}"
                    Command="{x:Bind ViewModel.SavePictureCommand}"/>
        </StackPanel>
        <!-- Images -->
        <Grid RelativePanel.Below="spHeader"
              RelativePanel.Above="StatusLabelStack"
              RelativePanel.AlignLeftWithPanel="True"
              RelativePanel.AlignRightWithPanel="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <!-- Original Image -->
            <TextBlock Grid.Column="0"
                       Grid.Row="0"
                       Margin="0,8,0,0"
                       Text="Original image"
                       TextAlignment="Center"/>
            <Image x:Name="OriginalImage"
                   Grid.Column="0"
                   Grid.Row="1"
                   Margin="0,0,8,16"
                   Stretch="Uniform"
                   Source="{x:Bind ViewModel.OriginalImageSource, Mode=OneWay}"/>
            <!-- Modified Image -->
            <TextBlock Grid.Column="1"
                       Grid.Row="0"
                       Margin="0,8,0,0"
                       Text="Converted image"
                       TextAlignment="Center"/>
            <Image Grid.Column="1"
                   Grid.Row="1"
                   Margin="8,0,0,16"
                   x:Name="ModifiedImage"
                   Stretch="Uniform"
                   Source="{x:Bind ViewModel.ModifiedImageSource, Mode=OneWay}"/>
        </Grid>
        <!-- Status -->
        <StackPanel x:Name="StatusLabelStack"
                    Margin="-16,0,-16,-16"
                    Height="32"
                    Background="{ThemeResource AppBarBackground}"
                    RelativePanel.AlignBottomWithPanel="True"
                    RelativePanel.AlignLeftWithPanel="True"
                    RelativePanel.AlignRightWithPanel="True">
            <TextBlock x:Name="StatusLabel"
                       TextAlignment="Left"
                       Text="{x:Bind ViewModel.Status, Mode=OneWay}"
                       Foreground="{x:Bind ViewModel.StatusForeground, Mode=OneWay}"
                       Margin="8,4,0,0"/>
        </StackPanel>
    </RelativePanel>
</Page>